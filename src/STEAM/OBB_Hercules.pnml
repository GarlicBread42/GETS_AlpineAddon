							1: spriteset_OBB_Hercules_anim2;
							2: spriteset_OBB_Hercules_anim3;
							3: spriteset_OBB_Hercules_anim4;}
							
						switch(FEAT_TRAINS, SELF, switch_spritestack_OBB_Hercules, [STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8)]) {
							0: spriteset_OBB_Hercules;
							1: return switch_animation_OBB_Hercules;}														
							
						switch(FEAT_TRAINS, SELF, switch_length_OBB_Hercules, position_in_articulated_veh % 2) {
							0: 4;
							1: 4;}	

					switch(FEAT_TRAINS,PARENT,switch_running_cost_OBB_Hercules, 1){
							return 170;}
							
					switch(FEAT_TRAINS, SELF, switch_FX_OBB_Hercules, position_in_vehid_chain % 2) {
							0: return visual_effect_and_powered(VISUAL_EFFECT_STEAM,-2, DISABLE_WAGON_POWER);														
								return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);}								   
							   
					switch(FEAT_TRAINS, SELF, switch_graphics_OBB_Hercules, position_in_vehid_chain % 2) {
							0:	   return switch_spritestack_OBB_Hercules;
							1:     spriteset_OBB_Austria_Tender;}					

					switch (FEAT_TRAINS, SELF, switch_articulated_OBB_Hercules, extra_callback_info1) {
							1: return ITEM_OBB_HERCULES; 
						return CB_RESULT_NO_MORE_ARTICULATED_PARTS;}

